<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>
        <%= title + ' - ' + author_info.name %>
    </title>
    <%- include('../../partials/refs') %>
</head>

<body class="grey lighten-2">
    <div style="display:flex;justify-content:center;align-items:center;">
        <div class="card" style="overflow: scroll; width: 30%; height: 50%; position: absolute; top:0; bottom: 0; left: 0; right: 0; margin: auto; padding: 2em">
            <form method="post" action="/admin">
                <div class="row">
                    <div class="col s12">
                        <h5>Login</h5>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input type="text" name="user[username]" class="validate" required autofocus>
                        <label for="username">Username</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        <input type="password" name="user[password]" class="validate" required>
                        <label for="password">Password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <label>
                            <input type="checkbox" name="user[remember]" class="filled-in" />
                            <span>Remember me</span>
                        </label>
                    </div>
                </div>

                <div class="row right-align">
                    <div class="col s12">
                        <button type="submit" class="waves-effect waves-light btn">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        M.AutoInit();
    </script>
</body>

</html>